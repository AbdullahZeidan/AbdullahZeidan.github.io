---
import { SEO } from 'astro-seo';

const title = 'Abdullah Zeidan | Software Engineer';
const description = 'A dev with the passion to make the web a greater place.';
const canonical = 'https://abdullahzeidan.github.io';
---

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="google-site-verification" content="sF_y0oto8QSBuruHbL7znfMWdsgBa3Ljk9jFwIpZYEI" />
    
    <SEO
        {title}
        {description}
        {canonical}
        twitter={{
            site: canonical,
        }}
        openGraph={{
            basic: {
                title: 'Abdullah Zeidan',
                description: 'Abdullah Zeidan | Software Engineer',
                type: 'website',
                image: '/images/open-graph-image.png',
                url: canonical,
            },
            image: {
                alt: 'Abdullah Zeidan',
            },
        }}
    />

    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/meta/site.webmanifest" />
    <link rel="mask-icon" href="/images/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="apple-mobile-web-app-title" content="Abdullah's Portfolio" />
    <meta name="application-name" content="Abdullah's Portfolio" />
    <meta name="msapplication-TileColor" content="#1d1d1d" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,400&display=swap"
        rel="stylesheet"
    />

    <script
        defer
        data-domain="abdullahzeidan.github.io"
        src="https://plausible.io/js/plausible.js"
    ></script>
</head>
